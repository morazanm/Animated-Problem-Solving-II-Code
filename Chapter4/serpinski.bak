#reader(lib "htdp-advanced-reader.ss" "lang")((modname serpinski) (read-case-sensitive #t) (teachpacks ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp"))) (htdp-settings #(#t constructor repeating-decimal #t #t none #f ((lib "image.rkt" "teachpack" "2htdp") (lib "universe.rkt" "teachpack" "2htdp")) #f)))



;; img --> img
;; Purpose: Draw Serpinski's triangle staring with the given image
;; Assumption: The given image is an equilateral triangle
;; How: If the given triangle image is big enough create a
;;      Serpinski triangle of half the length and place
;;      a copy above two copies beside each other.
(define (draw-sierpinski tri-img)
  (local [(define side-len (image-width tri-img))]
    (cond [(<= side-len 5)  tri-img]
          [else
           (local [(define sub-img (draw-sierpinski (triangle (* 1/2 (image-width tri-img))
                                                              'outline
                                                              'white)))]
             (above sub-img (beside sub-img sub-img)))])))
                                                  

                                            

